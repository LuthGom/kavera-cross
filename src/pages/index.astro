---
// Importando os componentes necessários
import Header from "../components/Header.astro";
import HeroBanner from "../components/HeroBanner.astro";
import PlansSection from "../components/PlansSection.astro";
import DifferentialsSection from "../components/DifferentialsSection.astro";
import Footer from "../components/Footer.astro";

// Você pode adicionar metadados da página aqui
const title = "Academia Kavera Cross | Treinamento Funcional e CrossFit";
const description = "Academia especializada em treinamento funcional e CrossFit com planos flexíveis e equipamentos de última geração.";
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <!-- Se você estiver usando Tailwind CSS, ele já estará configurado globalmente -->
</head>
<body>
  <div class="min-h-screen">
    <Header />
    <HeroBanner />
    <PlansSection />
    <DifferentialsSection />
    <Footer />
  </div>
</body>
</html>