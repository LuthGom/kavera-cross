---
import logoImage from "../../public/assets/b9a40bccd5aa597a041fe97afc9fd65e9f8d63d7.png";
import { Menu } from "lucide-react";
---

<header>
  <div>
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-3 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-3 md:py-4" id="logo">
          {/* Logo */}
          <div class="flex items-center">
            <img
              src={logoImage.src}
              alt="Kavera Cross Logo"
              class="w-8 h-8 md:w-10 md:h-10 mr-2 md:mr-3 object-contain"
            />
            <div class="text-lg md:text-2xl text-black kavera-logo">
              <span class="font-900">Kavera</span>
              <span class="ml-1 md:ml-2 text-blue-900">Cross</span>
            </div>
          </div>

          {/* Desktop Menu */}
          <nav class="hidden md:flex items-center space-x-8" id="desktop-menu">
            <a
              href="#unidades"
              class="text-gray-800 hover:text-blue-600 transition-colors"
            >
              Unidades
            </a>
            <a
              href="#planos"
              class="text-gray-800 hover:text-blue-600 transition-colors"
            >
              Planos
            </a>
            <a
              href="#sobre"
              class="text-gray-800 hover:text-blue-600 transition-colors"
            >
              Sobre Nós
            </a>
          </nav>
          <button
            class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
            id="mobile-menu-button"
          >
            <Menu id="menu-icon" />
          </button>
        </div>

        <div class="hidden py-4 border-t border-gray-200" id="mobile-menu">
          <nav class="flex flex-col space-y-3" id="nav-menu-mobile">
            <a
              href="#unidades"
              class="text-gray-800 hover:text-blue-600 transition-colors py-2 px-2 rounded-lg hover:bg-gray-50"
            >
              Unidades
            </a>
            <a
              href="#planos"
              class="text-gray-800 hover:text-blue-600 transition-colors py-2 px-2 rounded-lg hover:bg-gray-50"
            >
              Planos
            </a>
            <a
              href="#sobre"
              class="text-gray-800 hover:text-blue-600 transition-colors py-2 px-2 rounded-lg hover:bg-gray-50"
            >
              Sobre Nós
            </a>
          </nav>
        </div>
      </div>
    </header>
  </div>
  <script defer>
    // Elementos do DOM
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const desktopMenu = document.getElementById("desktop-menu");
    const mobileMenuLinks = document.querySelectorAll(".mobile-menu-link");
    const logo = document.getElementById("logo");
    const navMenuMobile = document.getElementById("nav-menu-mobile");

    // Variável para controlar o estado do menu
    let isMenuOpen = false;

    // Função para alternar o menu
    function toggleMenu() {
      isMenuOpen = !isMenuOpen;

      if (isMenuOpen) {
        mobileMenu?.classList.remove("hidden");
        menuIcon?.classList.add("hidden");
        logo.style.display = "flex";
        logo.style.flexDirection = "column";
        logo.style.justifyContent = "center";
        navMenuMobile.style.width = "100%";
        navMenuMobile.style.alignItems = "center";
        navMenuMobile.style.display = "flex";
        navMenuMobile.style.alignContent = "center";
        desktopMenu?.classList.remove("invisible");
      } else {
        mobileMenu?.classList.add("hidden");
        menuIcon?.classList.remove("hidden");

        desktopMenu?.classList.add("invisible");
      }
    }

    // Adicionar evento de clique ao botão do menu
    mobileMenuButton?.addEventListener("click", toggleMenu);

    // Adicionar eventos de clique aos links do menu móvel
    mobileMenuLinks.forEach((link) => {
      link.addEventListener("click", () => {
        // Fechar o menu quando um link for clicado
        if (isMenuOpen) {
          toggleMenu();
        }
      });
    });
  </script>
</header>
